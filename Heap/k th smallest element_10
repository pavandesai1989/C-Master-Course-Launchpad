#include<queue>
#include<vector>
#include<iostream>
using namespace std;


TIME : O(N) + k*log(N) 
//O(N) create min heap
//k*log(N) -- remove  top and heapify

int kthsmallest(int arr[],int n,int k)
{
    //create min heap
    priority_queue<int,vector<int>,greater<int> > pq;
    
    for(int i=0;i<n;i++)
        pq.push(arr[i]);
    
    if(k==1)
        return pq.top();
    
    int i=1;
    while(i!=k)
    {
        pq.pop();
        i++;
    }
    
    return pq.top();
}


int main()
{
    int arr[] = {5,4,23,1,0,};
    int size = sizeof(arr)/sizeof(int);
    
    cout<<kthsmallest(arr,size,3)<<endl;

    
}
